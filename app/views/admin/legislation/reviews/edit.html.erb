<% provide :title do %>
  <%= t("admin.header.title") %> - <%= t("admin.menu.legislation") %> - <%= @process.title %> - <%= t("admin.legislation.reviews.edit.title") %>
<% end %>

<div class="legislation-admin legislation-draft-versions-index">

  <%= back_link_to(
    admin_legislation_process_reviews_path(@process), t("shared.back")
  ) %>

  <h2><%= @process.title %></h2>

  <%= render "admin/legislation/processes/subnav",
    process: @process, active: "reviews"
  %>

  <h2 class="inline-block">
    <%= t(
      "admin.legislation.reviews.edit.title",
    ) %>
  </h2>

  <%= render 'form', url: admin_legislation_process_review_path(@process, @review) %>

</div>
